<div class="container-fluid">
    <div class="row-fluid">
        <div class="span4">
            <h3>原始发布内容:</h3>
            <h4>发件人:</h4>
            <p><%= shop.username %></p>
            <h4>分类:</h4>
            <p><%= shop.index %></p>
            <h4>标题:</h4>
            <p><%= shop.title %></p>
            <h4>展示文字:</h4>
            <pre><%= shop.prevtext %></pre> 
            <h4>展示文字2:</h4>
            <pre><%= shop.prevtext2 %></pre>
            <h4>说明:</h4>
            <pre><%= shop.instruction %></pre>
            <h4>名称:</h4>
            <p><%= shop.name %></p>
            <h4>简介:</h4>
            <pre><%= shop.brief %></pre>
            <h4>备注:</h4>
            <pre><%= shop.comment %></pre>
            <h4>电话:</h4>
            <pre><%= shop.telephone %></pre>
            <h4>邮箱:</h4>
            <pre><%= shop.email %></pre>
            <h4>网址:</h4>
            <a href="<%= shop.url %>"><%= shop.url %></a>
            <h4>地址:</h4>
            <pre><%= shop.address %></pre>
            <h4>路线:</h4>
            <pre><%= shop.path %></pre>
            <h4>标签:</h4>
            <pre><%= shop.tags %></pre>
            <% if (shop.img.length != 0) { %>
            <h4>配图:</h4>
            <% if (Object.prototype.toString.call(shop.img) === "[object Array]") { %>
            <p>总计<%= shop.img.length %>张图</p>
            <% shop.img.forEach(function(img,index) { %>
            <hr/>
            <p>第<%= index+1 %>张图:</p>
            <img src="data:image/jpg;base64,<%= img %>" alt="image"></img>
            <% }) %>
            <% } else { %>
            <img src="data:image/jpg;base64,<%= shop.img %>" alt="image"></img>
            <% }} %>
            <h4>发布日期:</h4>
            <p><%= shop.date.toISOString().replace(/T/, ' ').replace(/\..+/, '') %></p>
            <h4>过期日期:</h4>
            <p><%= shop.expire %></p>
        </div>

        <div class="span8" style="border-left: 1px solid #D4D4D4; padding-left: 3em;">
            <h3>修改发布:</h3>
            <form method="post" enctype="multipart/form-data">
                <div class="control-group">
                    <label class="control-label" for="index_input">分类:</label>
                    <div class="controls">
                        <select style="width:500px;" id="index_input" name="index">
                            <option>工作</option>
                            <option>找房</option>
                            <option>搬家</option>
                            <option>商业</option>
                            <option>机票</option>
                            <option>法务</option>
                        </select>
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label" for="username_input">发件人:</label>
                    <div class="controls">
                        <input value="<%= shop.username %>" style="width:500px;" id="username_input" name="username" type="text"></input>
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label" for="title_input">标题:</label>
                    <div class="controls">
                        <textarea style="width:500px;" id="title_input" name="title" type="text"><%= shop.title %></textarea>
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label" for="prevtext_input">展示文字:</label>
                    <div class="controls">
                        <textarea style="width:500px;" id="prevtext_input" name="prevtext" type="text"><%= shop.prevtext %></textarea>
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label" for="prevtext2_input">展示文字2:</label>
                    <div class="controls">
                        <textarea style="width:500px;" id="prevtext2_input" name="prevtext2" type="text"><%= shop.prevtext2 %></textarea>
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label" for="instruction_input">说明:</label>
                    <div class="controls">
                        <textarea style="height:5em; width:500px;" id="instruction_input" name="instruction" type="text"><%= shop.instruction %></textarea>
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label" for="name_input">名称:</label>
                    <div class="controls">
                        <textarea style="width:500px;" id="name_input" name="name" type="text"><%= shop.name %></textarea>
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label" for="brief_input">简介:</label>
                    <div class="controls">
                        <textarea style="height:5em; width:500px;" id="brief_input" name="brief" type="text"><%= shop.brief %></textarea>
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label" for="comment_input">备注:</label>
                    <div class="controls">
                        <textarea style="width:500px;" id="comment_input" name="comment" type="text"><%= shop.comment %></textarea>
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label" for="telephone_input">电话:</label>
                    <div class="controls">
                        <textarea style="width:500px;" id="telephone_input" name="telephone" type="text"><%= shop.telephone %></textarea>
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label" for="email_input">邮箱:</label>
                    <div class="controls">
                        <textarea style="width:500px;" id="email_input" name="email" type="text"><%= shop.email %></textarea>
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label" for="url_input">网址:</label>
                    <div class="controls">
                        <textarea style="width:500px;" id="url_input" name="url" type="text"><%= shop.url %></textarea>
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label" for="address_input">地址:</label>
                    <div class="controls">
                        <textarea style="width:500px;" id="address_input" name="address" type="text"><%= shop.address %></textarea>
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label" for="path_input">路线:</label>
                    <div class="controls">
                        <textarea style="width:500px;" id="path_input" name="path" type="text"><%= shop.path %></textarea>
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label" for="previmg_input">预览图片:</label>
                    <div class="controls">
                        <input style="width:500px;" id="previmg_input" name="previmage" type="file"></input>
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label" for="img_input">滚动图片:</label>
                    <div class="controls">
                        <input style="width:500px;" id="img_input" name="image" type="file" multiple></input>
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label" for="expire_input">过期日期:</label>
                    <div class="controls">
                        <input style="width:500px;" id="expire_input" name="expire" type="date"></input>
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label" for="tags_input">标签:</label>
                    <div class="controls">
                        <textarea style="width:500px;" id="tags_input" name="tags" type="text"><%= shop.tags %></textarea>
                    </div>
                </div>

                <div class="control-group">
                    <div class="controls">
                        <button type="submit" class="btn btn-primary span2">修改</button>
                        <a href="/background/information" class="btn btn-primary span2">回退</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>