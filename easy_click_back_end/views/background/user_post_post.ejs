<div class="container-fluid">
	<h3>发布一个用户投稿:</h3>
	<form method="post" enctype="multipart/form-data">

		<div class="control-group">
			<label class="control-label" for="username_input">发送者:</label>
			<div class="controls">
				<input value="admin" style="width:500px;" id="username_input" name="username" type="text"></input>
			</div>
		</div>

		<div class="control-group">
			<label class="control-label" for="title_input">标题:</label>
			<div class="controls">
				<textarea style="width:500px;" id="title_input" name="title" type="text"></textarea>
			</div>
		</div>

		<div class="control-group">
			<label class="control-label" for="prevtext_input">展示文字:</label>
			<div class="controls">
				<textarea style="width:500px;" id="prevtext_input" name="prevtext" type="text"></textarea>
			</div>
		</div>

		<div class="control-group">
			<label class="control-label" for="prevtext2_input">展示文字2:</label>
			<div class="controls">
				<textarea style="width:500px;" id="prevtext2_input" name="prevtext2" type="text"></textarea>
			</div>
		</div>

		<div class="control-group">
			<label class="control-label" for="content_input">物品介绍:</label>
			<div class="controls">
				<textarea style="height:5em; width:500px;" id="content_input" name="content" type="text"></textarea>
			</div>
		</div>

		<div class="control-group">
			<label class="control-label" for="location_input">所在地:</label>
			<div class="controls">
				<textarea style="width:500px;" id="location_input" name="location" type="text"></textarea>
			</div>
		</div>

		<div class="control-group">
			<label class="control-label" for="contact_input">联系方式:</label>
			<div class="controls">
				<textarea style="width:500px;" id="contact_input" name="contact" type="text"></textarea>
			</div>
		</div>

		<div class="control-group">
			<label class="control-label" for="price_input">价格:</label>
			<div class="controls">
				<textarea style="width:500px;" id="price_input" name="price" type="text"></textarea>
			</div>
		</div>

		<div class="control-group">
			<label class="control-label" for="previmg_input">预览图片:</label>
			<div class="controls">
				<input style="width:500px;" id="previmg_input" name="previmage" type="file"></input>
			</div>
		</div>               

		<div class="control-group">
			<label class="control-label" for="img_input">滚动图片:</label>
			<div class="controls">
				<input style="width:500px;" id="img_input" name="image" type="file" multiple></input>
			</div>
		</div>

		<div class="control-group">
			<label class="control-label" for="tags_input">标签:</label>
			<div class="controls">
				<textarea style="width:500px;" id="tags_input" name="tags" type="text"></textarea>
			</div>
		</div>

		<div class="control-group">
			<div class="controls">
				<button type="submit" class="btn btn-primary span2">发送</button>
				<a href="/background/user_post_editor_list" class="btn btn-primary span2">回退</a>
			</div>
		</div>
	</form>
</div>