						<a href="/background/learning/<%=learn.uid%>">
							<h4>标题: <%= learn.title %></h4>
						</a>
						<a id="button_<%=learn.uid%>"class="btn btn-danger" href="/remove_learnings/<%=learn.uid%>">删除</a>
					</div>
				</td>
			</tr>
		<% } %>
		<% }) %>
		</table>
		<h4>总计: <%= i %> 条</h4>
		<hr/>
		<h4>实用语句:</h4>
		<table class="table table-hover table-bordered">
		<% var i=0 %>
		<% learns.forEach(function(learn, index) { %>
		<% if (learn.index==='sentence') { %>
		<% i++ %>
			<tr>
				<td>
					<div id="<%=learn.uid%>">
						<a href="/background/learning/<%=learn.uid%>">
							<h4>标题: <%= learn.title %></h4>
						</a>
						<a id="button_<%=learn.uid%>"class="btn btn-danger" href="/remove_learnings/<%=learn.uid%>">删除</a>
					</div>
				</td>
			</tr>
		<% } %>
		<% }) %>
		</table>
		<h4>总计: <%= i %> 条</h4>
		<hr/>
		<h4>能力试验:</h4>
		<table class="table table-hover table-bordered">
		<% var i=0 %>
		<% learns.forEach(function(learn, index) { %>
		<% if (learn.index==='test') { %>
		<% i++ %>
			<tr>
				<td>
					<div id="<%=learn.uid%>">
						<a href="/background/learning/<%=learn.uid%>">
							<h4>标题: <%= learn.title %></h4>
