<div data-role="content">
    <div data-role="fieldcontain">
        <div class="information_block">
            <% if (shop.img.length != 0) { %>    
            <% if (Object.prototype.toString.call(shop.img) === "[object Array]") { %>
            <div id="information_details_slider">
                <% var ImgBuffer; %>
                <% shop.img.forEach(function(img,index) { %>
                <img src="data:image/jpg;base64,<%= img %>" alt="image"></img>
                <% }) %>
                <% if (shop.img.length===3) { %>
                <img src="data:image/jpg;base64,<%= shop.img[1] %>" alt="image"></img>
                <% } %>
                <% if (shop.img.length===2) { %>
                <img src="data:image/jpg;base64,<%= shop.img[0] %>" alt="image"></img>
                <img src="data:image/jpg;base64,<%= shop.img[1] %>" alt="image"></img>
                <% } %>
            </div>
            <script>
            $("#information_details_slider").excoloSlider({
                width: $(window).width(),
                height: $(window).width()/2,
                autoSize: false,
                touchNav: true,
                mouseNav: true,
                prevnextNav: false,
                prevnextAutoHide: false,
                pagerNav: false,
                hoverPause: false,
                interval: 10000,
            });
            </script>
            <% } else { %>
            <img src="data:image/jpg;base64,<%= shop.img %>" width="100%" alt="image">
            <% }} %> 
            <div>
                <div style="border: none !important;" data-role="fieldcontain">
                    <div class="content_block">
                        <div>
                            <img src="/img/icon_img/icon_fav_1.png"></img>
                        </div>
                        <div>
                            <h3><%= shop.title %></h3>
                        </div>
                    </div> 
                </div>
            </div>
            <pre><%= shop.instruction %></pre>
        </div>
    </div>

    <% if (shop.name.length!=0)  {%> 
    <div data-role="fieldcontain">
        <div class="content_block">
            <div>
                <img src="/img/icon_img/icon_content_name.png"></img>
            </div>
            <div>
                <pre><%= shop.name %></pre>
            </div>
        </div> 
    </div>
    <% } %>
    <% if (shop.brief.length!=0)  {%> 
    <div data-role="fieldcontain">
        <div class="content_block">
            <div>
                <img src="/img/icon_img/icon_content_brief.png"></img>
            </div>
            <div>
                <pre><%= shop.brief %></pre>
            </div>
        </div> 
    </div>
    <% } %>
    <% if (shop.comment.length!=0)  {%> 
    <div data-role="fieldcontain">
        <div class="content_block">
            <div>
                <img src="/img/icon_img/icon_content_comment.png"></img>
            </div>
            <div>
                <pre><%= shop.comment %></pre>
            </div>
        </div> 
    </div>
    <% } %>
    <% if (shop.telephone.length!=0)  {%> 
    <div data-role="fieldcontain">
        <div class="content_block">
            <div>
                <img src="/img/icon_img/icon_content_telephone.png"></img>
            </div>
            <div>
                <% var allnumber = shop.telephone.split(/\r\n|\r|\n/g) %>
                <% allnumber.forEach(function(number,index) { %>
                <% var telenumber = number.replace(/[^\d.]/g,'') %>
                <pre><a href="tel:<%= telenumber %>"><%= number %></a></pre>
                <% }) %>
            </div>
        </div> 
    </div>
    <% } %>
    <% if (shop.email.length!=0)  {%> 
    <div data-role="fieldcontain">
        <div class="content_block">
            <div>
                <img src="/img/icon_img/icon_content_email.png"></img>
            </div>
            <div>
                <pre><a href="mailto:<%= shop.email %>"><%= shop.email %></a></pre>
            </div>
        </div> 
    </div>
    <% } %>
    <% if (shop.url.length!=0)  {%> 
    <div data-role="fieldcontain">
        <div class="content_block">
            <div>
                <img src="/img/icon_img/icon_content_url.png"></img>
            </div>
            <div>
                <pre><a href="<%= shop.url %>" rel="external"><%= shop.url %></a></pre>
            </div>
        </div> 
    </div>
    <% } %>
    <% if (shop.address.length!=0)  {%> 
    <div data-role="fieldcontain">
        <div class="content_block">
            <div>
                <img src="/img/icon_img/icon_content_address.png"></img>
            </div>
            <div>
                <pre><%= shop.address %></pre>
            </div>
        </div> 
    </div>
    <% } %>
    <% if (shop.path.length!=0)  {%> 
    <div data-role="fieldcontain">
        <div class="content_block">
            <div>
                <img src="/img/icon_img/icon_content_path.png"></img>
            </div>
            <div>
                <pre><%= shop.path %></pre>
            </div>
        </div> 
    </div>
    <% } %>
    <% if (shop.date.length!=0)  {%> 
    <div data-role="fieldcontain">
        <div class="content_block">
            <div>
                <% var index = shop.date.toISOString().indexOf("T"); %>
                <pre style="margin-left:1em;">发布日期: <%= shop.date.toISOString().substring(0,index) %></pre>
            </div>
        </div> 
    </div>
    <% } %>
</div>